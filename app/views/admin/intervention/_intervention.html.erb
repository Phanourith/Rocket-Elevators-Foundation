<!DOCTYPE html>
<html>
<head>
    <title>Car Booking Form</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    <style>
      html, body {
      min-height: 100%;
      }
      body, div, form, input, select, textarea, p { 
      padding: 0;
      margin: 0;
      outline: none;
      font-family: Roboto, Arial, sans-serif;
      font-size: 14px;
      color: #666;
      line-height: 22px;
      }
      h1 {
      position: absolute;
      margin: 0;
      font-size: 36px;
      color: #fff;
      z-index: 2;
      }
      .testbox {
      display: flex;
      justify-content: center;
      align-items: center;
      height: inherit;
      padding: 20px;
      }
      form {
      width: 100%;
      padding: 20px;
      border-radius: 6px;
      background: #fff;
      box-shadow: 0 0 20px 0 #333; 
      }
      .banner {
      position: relative;
      height: 210px;
      background-image: url("/uploads/media/default/0001/02/328c356e9bba5add698e405d0059aa4207d8f1f6.jpeg");      background-size: cover;
      display: flex;
      justify-content: center;
      align-items: center;
      text-align: center;
      }
      .banner::after {
      content: "";
      background-color: rgba(0, 0, 0, 0.4); 
      position: absolute;
      width: 100%;
      height: 100%;
      }
      input, textarea, select {
      margin-bottom: 10px;
      border: 1px solid #ccc;
      border-radius: 3px;
      }
      input {
      width: calc(100% - 10px);
      padding: 5px;
      }
      select {
      width: 100%;
      padding: 7px 0;
      background: transparent;
      }
      textarea {
      width: calc(100% - 12px);
      padding: 5px;
      }
      .item:hover p, .item:hover i, .question:hover p, .question label:hover, input:hover::placeholder {
      color: #333;
      }
      .item input:hover, .item select:hover, .item textarea:hover {
      border: 1px solid transparent;
      box-shadow: 0 0 6px 0 #333;
      color: #333;
      }
      .item {
      position: relative;
      margin: 10px 0;
      }
      input[type="date"]::-webkit-inner-spin-button {
      display: none;
      }
      .item i, input[type="date"]::-webkit-calendar-picker-indicator {
      position: absolute;
      font-size: 20px;
      color: #a9a9a9;
      }
      .item i {
      right: 1%;
      top: 30px;
      z-index: 1;
      }
      [type="date"]::-webkit-calendar-picker-indicator {
      right: 0;
      z-index: 2;
      opacity: 0;
      cursor: pointer;
      }
      input[type="time"]::-webkit-inner-spin-button {
      margin: 2px 22px 0 0;
      }
      input[type=radio], input.other {
      display: none;
      }
      label.radio {
      position: relative;
      display: inline-block;
      margin: 5px 20px 10px 0;
      cursor: pointer;
      }
      .question span {
      margin-left: 30px;
      }
      label.radio:before {
      content: "";
      position: absolute;
      top: 2px;
      left: 0;
      width: 15px;
      height: 15px;
      border-radius: 50%;
      border: 2px solid #ccc;
      }
      #radio_5:checked ~ input.other {
      display: block;
      }
      input[type=radio]:checked + label.radio:before {
      border: 2px solid #444;
      background: #444;
      }
      label.radio:after {
      content: "";
      position: absolute;
      top: 7px;
      left: 5px;
      width: 7px;
      height: 4px;
      border: 3px solid #fff;
      border-top: none;
      border-right: none;
      transform: rotate(-45deg);
      opacity: 0;
      }
      input[type=radio]:checked + label:after {
      opacity: 1;
      }
      .btn-block {
      margin-top: 10px;
      text-align: center;
      }
      button {
      width: 150px;
      padding: 10px;
      border: none;
      border-radius: 5px; 
      background: #444;
      font-size: 16px;
      color: #fff;
      cursor: pointer;
      }
      button:hover {
      background: #666;
      }
      @media (min-width: 568px) {
      .name-item, .city-item {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      }
      .name-item input, .city-item input {
      width: calc(50% - 20px);
      }
      .city-item select {
      width: calc(50% - 8px);
      }
      }
    </style>
  </head>
<body onload="myFunction()">

<h2>Intervention Form</h2>

<form action="/intervention/post" method = "POST" id="form">
    <label for="customer_option">Customer name:</label><br>
    <select id="customer_option" onchange="loadBuilding()" name = "customer_id"><option value = "None">None</option></select>

    <div id="building_select_div">
        <label for="building_option">Building select:</label><br>
        <select id="building_option" onchange="loadBattery()" name = "building_id"><option value = "None">None</option></select>
    </div>
    <div id="battery_select_div">
        <label for="battery_option">Battery select:</label><br>
        <select id="battery_option" onchange="loadColumn()" name = "battery_id"><option value = "None">None</option></select>
    </div>
    <div id=column_select_div>
        <label for="column_option">Column select:</label><br>
        <select id="column_option" onchange="loadElevator()" name = "column_id"><option value = "None">None</option></select>
    </div>
    <div id="elevator_select_div">
        <label for="elevator_option">Elevator select:</label><br>
        <select id="elevator_option" name = "elevator_id"><option value = "None">None</option></select>
    </div>
    <label for="employee_option">Employee select:</label><br>
    <select id="employee_option" name = "employee_id"><option value = "None">None</option></select>
    <label for="report">Report</label><br>
    <textarea rows="3" id="report" name = "report"></textarea>
    <input type="submit" value="Submit">
</form> 

<script>
    


    var dropdownCustomers = document.getElementById("customer_option")
    var dropdownBuildings = document.getElementById("building_option")
    var dropdownBatteries = document.getElementById("battery_option")
    var dropdownColumns = document.getElementById("column_option")
    var dropdownElevators = document.getElementById("elevator_option")
    var dropdownEmployees = document.getElementById("employee_option")
    var divBuilding = document.getElementById("building_select_div")
    var divBattery = document.getElementById("battery_select_div")
    var divColumn = document.getElementById("column_select_div")
    var divElevator = document.getElementById("elevator_select_div")



function myFunction() {
    var current_user_id = <%= raw(current_user.id)%>
    
    var input = document.createElement("input");

    input.setAttribute("type", "hidden");

    input.setAttribute("name", "user_id");

    input.setAttribute("value", current_user_id);
    document.getElementById("form").appendChild(input);

//append to form element that you want .

    console.log(current_user_id)
    customer = [];
    employee = [];

    <% Customer.all.each do |customer| %>
        customer.push(<%= raw(customer.to_json) %>);
    <%end%>

    <% Employee.all.each do |employee| %>
        employee.push(<%= raw(employee.to_json) %>);
    <%end%>

    for(var i = 0; i < customer.length; i++) {
        var opt = customer[i];
        var el = document.createElement("option");
        el.text = opt.company_name;
        el.value = opt.id;
        dropdownCustomers.appendChild(el);
    }
    for(var i = 0; i < employee.length; i++) {
        var opt = employee[i];
        var el = document.createElement("option");
        el.text = opt.first_name;
        el.value = opt.id;
        dropdownEmployees.appendChild(el);
    }

}

function loadBuilding() {

    $.ajax({
            url:'/intervention/getBuilding/' + dropdownCustomers.value,
            type:'GET',
            dataType:'json',
            success:function(data){
                console.log(data);
                var buildings = data["buildingsReturn"]
                console.log(buildings)
                for(var i = 0; i < buildings.length; i++) {
                    var opt = buildings[i];
                    var el = document.createElement("option");
                    el.text = opt.id;
                    el.value = opt.id;
                    dropdownBuildings.appendChild(el);
                }
            },
            error:function(data){
                console.log("error");
            }
        });
}

function loadBattery() {

    $.ajax({
            url:'/intervention/getBattery/' + dropdownBuildings.value,
            type:'GET',
            dataType:'json',
            success:function(data){
                console.log(data);
                var batteries = data["batteriesReturn"]
                console.log(batteries)
                for(var i = 0; i < batteries.length; i++) {
                    var opt = batteries[i];
                    var el = document.createElement("option");
                    el.text = opt.id;
                    el.value = opt.id;
                    dropdownBatteries.appendChild(el);
                }
            },
            error:function(data){
                console.log("error");
            }
        });
}

function loadColumn() {

    $.ajax({
            url:'/intervention/getColumn/' + dropdownBatteries.value,
            type:'GET',
            dataType:'json',
            success:function(data){
                console.log(data);
                var columns = data["columnsReturn"]
                console.log(columns)
                for(var i = 0; i < columns.length; i++) {
                    var opt = columns[i];
                    var el = document.createElement("option");
                    el.text = opt.id;
                    el.value = opt.id;
                    dropdownColumns.appendChild(el);
                }
            },
            error:function(data){
                console.log("error");
            }
        });
}

function loadElevator() {

    $.ajax({
            url:'/intervention/getElevator/' + dropdownColumns.value,
            type:'GET',
            dataType:'json',
            success:function(data){
                console.log(data);
                var elevators = data["elevatorsReturn"]
                console.log(elevators)
                for(var i = 0; i < elevators.length; i++) {
                    var opt = elevators[i];
                    var el = document.createElement("option");
                    el.text = opt.id;
                    el.value = opt.id;
                    dropdownElevators.appendChild(el);
                }
            },
            error:function(data){
                console.log("error");
            }
        });
}

</script>

</body>

</html>

